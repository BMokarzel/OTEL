SERVER_PORT="8080"
SERVER_ENABLE_TRACING="true"
SERVER_ENV="local"
SERVER_VERSION="1.0.0"
SERVER_NAME="service-a"

# Apenas para exemplo — pode ser seu número de build também
BUILD="local-dev"

# Collector OTLP gRPC (dentro do Docker, precisa usar o nome do serviço)
COLLECTOR_URL="otel-collector:4317"

# Comunicação interna via Docker entre service-a -> service-b
SERVER_B_URL="http://service-b:8080"

# Zipkin rodando no container "zipkin"
ZIPKIN_URL="http://zipkin:9411/api/v2/spans"

# Endpoint GRPC se você quiser usar explicitamente (mesmo do collector)
GRPC_URL="otel-collector:4317"

OTEL_TRACES_ENDPOINT="otel-collector:4317"
